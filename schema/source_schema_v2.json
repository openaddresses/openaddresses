                "addrtype": {
                    "type": "string"
                },
                "accuracy": {
                    "description": "https://github.com/openaddresses/openaddresses/blob/master/CONTRIBUTING.md#accuracy",
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "srs": {
                    "type": "string",
                    "pattern": "EPSG:[0-9]+"
                },
                "file": {
                    "type": "string"
                },
                "layer": {
                    "description": "specifies a layer to use in the GDB",
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "encoding": {
                    "type": "string"
                },
                "csvsplit": {
                    "type": "string"
                },
                "headers": {
                    "type": "integer",
                    "minimum": -1
                },
                "skiplines": {
                    "type": "integer",
                    "minimum": 1
                },
                "notes": {
                    "type": "string"
                },
                "id": {
                    "description": "unique identifier for the address row",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/base_conform_field_value"
