{
    "coverage": {
        "country": "ch",
        "city": "Zurich"
    },
    "data": "https://data.stadt-zuerich.ch/storage/f/adressen/adressen.json",
    "website": "https://data.stadt-zuerich.ch/dataset/adressen",
    "license": {
        "text": "CC 0",
        "attribution": false,
        "share-alike": false
    },
    "type": "http",
    "conform": {
        "number": {
            "function": "regexp",
            "field": "Adresse",
            "pattern": "(.* )([0-9]+)",
            "replace": "$2"
        },
        "street": {
            "function": "regexp",
            "field": "Adresse",
            "pattern": "(.*)( [0-9]+)",
            "replace": "$1"
        },
        "postcode": "PLZ",
        "type": "geojson"
    }
}
