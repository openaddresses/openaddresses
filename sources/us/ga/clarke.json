            "pattern": "^(\\d+(?: 1/2|[A-Z])?)\\s"
        },
        "street": [
            "PreDir",
            "StreetName",
            "StreetType",
            "PostDir"
        ],
        "unit": [
            "UnitType",
            "Unit"
        ],
        "city": "POSTALCITY",
        "region": "State",
        "postcode": "Zipcode"
    },
    "test": {
        "enabled": true,
        "description": "house numbers can be digits-only, digits+alpha, or digits+1/2",
        "acceptance-tests": [
            {
                "description": "address with digits-only house number",
                "inputs": {
                    "FullAdd": "260 HOLMAN AVE",
                    "PreDir": "",
                    "StreetName": "HOLMAN",
                    "StreetType": "AVE",
                    "PostDir": "",
                    "UnitType": "",
                    "Unit": "",
                    "PostalCity": "",
                    "State": "",
                    "Zipcode": ""
                },
                "expected": {
                    "number": "260",
                    "street": "HOLMAN AVE"
                }
            },
            {
                "description": "address with digits+alpha house number",
                "inputs": {
                    "FullAdd": "705A SPRING VALLEY RD",
                    "PreDir": "",
                    "StreetName": "SPRING VALLEY",
                    "StreetType": "RD",
                    "PostDir": "",
                    "UnitType": "",
                    "Unit": "",
                    "PostalCity": "",
                    "State": "",
                    "Zipcode": ""
                },
                "expected": {
                    "number": "705A",
                    "street": "SPRING VALLEY RD"
                }
            },
            {
                "description": "address with digits+fraction house number",
                "inputs": {
                    "FullAdd": "1737 1/2 S LUMPKIN ST",
                    "PreDir": "S",
                    "StreetName": "LUMPKIN",
                    "StreetType": "ST",
                    "PostDir": "",
                    "UnitType": "",
                    "Unit": "",
                    "PostalCity": "",
                    "State": "",
                    "Zipcode": ""
                },
                "expected": {
                    "number": "1737 1/2",
                    "street": "S LUMPKIN ST"
                }
            }
        ]
    }
}
