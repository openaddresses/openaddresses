{
    "coverage": {
        "ISO 3166": {
            "alpha2": "TW-CYI",
            "country": "Taiwan"
        },
        "country": "tw"
    },
    "schema": 2,
    "layers": {
        "addresses": [
            {
                "name": "country",
                "data": "http://regis.chiayi.gov.tw/ArcGIS/rest/services/cyDoor/MapServer/0",
                "protocol": "ESRI",
                "conform": {
                    "format": "geojson",
                    "number": {
                        "function": "regexp",
                        "field": "ADDR_NO",
                        "pattern": "^([0-9０-９]+號?)"
                    },
                    "unit": {
                        "function": "regexp",
                        "field": "ADDR_NO",
                        "pattern": "^(?:[0-9０-９]+號?)(.*)"
                    },
                    "street": {
                        "function": "join",
                        "fields": [
                            "STREET",
                            "ALLEY",
                            "ALLEY1"
                        ],
                        "separator": ""
                    },
                    "district": "LI_CODE"
                }
            }
        ]
    }
}
