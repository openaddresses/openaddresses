{
    "coverage": {
        "ISO 3166": {
            "alpha2": "TW-HUA",
            "country": "Taiwan"
        },
        "country": "tw"
    },
    "schema": 2,
    "layers": {
        "addresses": [
            {
                "name": "country",
                "data": "http://gis.hl.gov.tw/arcgis/rest/services/HLADDR/HLADDR_user/MapServer/1",
                "protocol": "ESRI",
                "conform": {
                    "format": "geojson",
                    "number": {
                        "function": "regexp",
                        "field": "NUMBER_",
                        "pattern": "^([0-9０-９]+號?)"
                    },
                    "unit": {
                        "function": "regexp",
                        "field": "NUMBER_",
                        "pattern": "^(?:[0-9０-９]+號?)(.*)"
                    },
                    "street": {
                        "function": "join",
                        "fields": [
                            "ROAD",
                            "LANE",
                            "ALLEY"
                        ],
                        "separator": ""
                    },
                    "city": "NEW_ID",
                    "district": "COUN_ID"
                }
            }
        ]
    }
}
